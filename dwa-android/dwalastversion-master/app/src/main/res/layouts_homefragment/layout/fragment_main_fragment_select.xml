<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans"
    >


    <com.southernbox.springscrollview.SpringScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/scroll"
        android:overScrollMode="always"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/trans">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp150"
                android:background="@drawable/half6"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp150"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/half6_right"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ball1"
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp150"
                android:layout_marginStart="@dimen/dp40"
                android:layout_marginTop="@dimen/dp120"
                android:background="@drawable/main1"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/medicines"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp20" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ball2"
                android:layout_width="@dimen/dp130"
                android:layout_height="@dimen/dp130"
                android:layout_marginEnd="@dimen/dp30"
                android:layout_marginTop="@dimen/dp145"
                android:background="@drawable/main2"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/supplements"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp17" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp150"
                android:layout_marginTop="@dimen/dp100"
                android:background="@drawable/half6"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp150"
                android:background="@drawable/half6_right"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ball2">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ball3"
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp150"
                android:background="@drawable/main3"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout4"
                app:layout_constraintStart_toEndOf="@+id/linearLayout5"
                app:layout_constraintTop_toBottomOf="@+id/ball1">

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kids"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp20" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ball4"
                android:layout_width="@dimen/dp130"
                android:layout_height="@dimen/dp130"
                android:layout_marginStart="@dimen/dp30"
                android:background="@drawable/main4"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cosmetics"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp20" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ball5"
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp150"
                android:layout_marginEnd="@dimen/dp35"
                android:background="@drawable/main5"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ball3">

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/equipments"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp20" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="@dimen/dp140"
                android:layout_height="@dimen/dp140"
                android:layout_marginStart="@dimen/dp60"
                android:background="@drawable/main6"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ball4">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ball6"
                android:layout_width="@dimen/dp120"
                android:layout_height="@dimen/dp120"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/main1"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/linearLayout9"
                app:layout_constraintTop_toBottomOf="@+id/ball5">

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp17" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout11"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp140"
                android:background="@drawable/half6"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout9">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout12"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp150"
                android:background="@drawable/half6_right"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ball6">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout13"
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp150"
                android:background="@drawable/main2"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout12"
                app:layout_constraintStart_toEndOf="@+id/linearLayout11"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

                <TextView
                    android:id="@+id/text7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/white"
                    android:textSize="@dimen/sp20" />

            </LinearLayout>


        </android.support.constraint.ConstraintLayout>
    </com.southernbox.springscrollview.SpringScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sp15"
        android:background="@color/white"
        android:padding="@dimen/dp5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/trans"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/dp10"
            android:gravity="center"
            tools:ignore="RtlSymmetry,UselessParent">


            <EditText
                android:id="@+id/serchHome"
                style="@style/backgroundTint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:hint="@string/search_products"
                android:imeOptions="actionSearch"
                android:inputType="textAutoComplete"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/sp13" />

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center"
                android:paddingEnd="@dimen/dp10"
                android:paddingStart="@dimen/dp10"
                android:src="@drawable/search"
                tools:ignore="ContentDescription" />


        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>