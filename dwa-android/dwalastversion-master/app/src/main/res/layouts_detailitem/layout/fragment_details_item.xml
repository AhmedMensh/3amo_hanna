<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:orientation="vertical"
    android:background="@color/white"

    >
    <View
        android:id="@+id/viewLine1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2"
        android:background="@color/green"/>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:background="@color/trans">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp2"
                android:layout_marginTop="@dimen/dp10"
                android:padding="@dimen/dp2"
                app:cardBackgroundColor="@color/white"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:orientation="vertical"
                       android:layout_margin="@dimen/dp10"
                        >
                        <TextView
                            android:id="@+id/nameItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name item"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/sp15"
                            />
                        <TextView
                            android:id="@+id/weightItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="weight item"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp12"
                            />


                    </LinearLayout>
                    <com.synnapps.carouselview.CarouselView
                        android:id="@+id/carouselView"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp200"
                        app:fillColor="@color/black"
                        app:pageColor="@color/gray"
                        app:radius="@dimen/dp2"
                        app:slideInterval="2000"
                        app:strokeColor="@color/gray"
                        app:strokeWidth="@dimen/dp1"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp2"
                android:padding="@dimen/dp2"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                app:cardBackgroundColor="@color/white"
                android:background="@color/white">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/buy"
                        android:layout_width="@dimen/dp90"
                        android:layout_height="@dimen/dp40"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginRight="@dimen/dp5"
                        android:textSize="@dimen/sp12"
                        android:text="Buy(10.02)"
                        android:textColor="@color/green"
                        android:background="@drawable/buttonrounding2"
                        />
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end|center">
                        <ImageView
                            android:id="@+id/scan"
                            android:layout_width="@dimen/dp35"
                            android:layout_height="@dimen/dp35"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_marginRight="@dimen/dp5"
                            android:src="@drawable/scanitem"
                            />
                        <ImageView
                            android:id="@+id/save"
                            android:layout_width="@dimen/dp35"
                            android:layout_height="@dimen/dp35"
                            android:src="@drawable/saveitem"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_marginRight="@dimen/dp5"
                            />

                    </LinearLayout>

                </LinearLayout>

                    <TextView
                        android:id="@+id/description"
                        android:layout_margin="@dimen/dp10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp13"
                        android:textColor="@color/gray"
                        />

                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>


    </ScrollView>
    </LinearLayout>

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2"
        android:background="@color/green"/>
</LinearLayout>