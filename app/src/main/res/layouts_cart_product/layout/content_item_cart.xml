<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/boredritem"
    android:gravity="center"
    android:id="@+id/mainLayout"
    android:layout_marginTop="@dimen/dp5"
    android:layout_marginBottom="@dimen/dp5"
    android:padding="@dimen/dp5">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp45"
        android:src="@drawable/test"
        app:civ_border_width="0dp"
        app:civ_border_color="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start|center"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp5"
        android:layout_marginEnd="@dimen/dp5"
        >
        <TextView
            android:id="@+id/nameItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name item"
        android:textColor="@color/black"
        android:textSize="@dimen/sp15"
            android:singleLine="true"
            android:ellipsize="end"
        />
        <TextView
            android:id="@+id/weightItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="weight item"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp12"
            android:singleLine="true"
            android:ellipsize="end"
            />


    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginEnd="@dimen/dp10"
    android:orientation="vertical">

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$25.6"
        android:textColor="@color/green"
        android:textSize="@dimen/sp13"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/sub"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_margin="@dimen/dp5"
            android:src="@drawable/sub_item"
            />
        <TextView
            android:id="@+id/count"
            android:layout_width="@dimen/dp30"
            android:layout_height="wrap_content"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="@dimen/sp13"
           android:gravity="center"
            />

        <ImageView
            android:id="@+id/add"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_margin="@dimen/dp5"
            android:src="@drawable/add_item"
            />
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/border_profile_notif_raight"
        android:gravity="center"
        android:padding="@dimen/dp5"
        android:id="@+id/layCorner"
        >
        <ImageView
            android:id="@+id/imgCorener"
            android:layout_width="@dimen/dp35"
            android:layout_height="@dimen/dp35"
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10"
            android:src="@drawable/removeitem"/>
    </LinearLayout>
</LinearLayout>