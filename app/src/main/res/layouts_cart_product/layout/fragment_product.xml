<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/TakeScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp2"
        app:cardBackgroundColor="@color/white"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginStart="@dimen/dp15"

        app:elevation="@dimen/dp5"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp5"
            android:visibility="gone"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/cart_scan"
                />
            <TextView
                android:layout_margin="@dimen/dp5"
                android:id="@+id/nameItem"
                android:layout_weight="1"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/prescription_uploaded"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/sp15"
                />
            <ImageView
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:padding="@dimen/dp5"
                android:src="@drawable/close"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:paddingTop="@dimen/dp2"
        android:paddingEnd="@dimen/dp15"
        android:paddingStart="@dimen/dp15"
        android:layout_weight="1"
        android:background="@color/trans"
        android:id="@+id/recycler_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginStart="@dimen/dp15"
        android:orientation="vertical"
        >
        <TextView
            android:layout_margin="@dimen/dp5"
            android:id="@+id/Total"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/total_256_2"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="end"
            android:textSize="@dimen/sp17"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:layout_marginBottom="@dimen/dp10"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:src="@drawable/werrong"
                />

            <TextView
                android:layout_margin="@dimen/dp5"
                android:id="@+id/desc"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/please_make_sure_of_your_items_there_is_no_return_or_replace_of_items_after_there_delivery"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp13"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/checkOut"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@color/Red"
        android:text="@string/checkout"
        android:textColor="@color/white"
        />
</LinearLayout>