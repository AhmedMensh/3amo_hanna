<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp5"
    android:layout_marginBottom="@dimen/dp5"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp2"
        android:padding="@dimen/dp2"
        app:cardBackgroundColor="@color/white"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:padding="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start|center"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/dp5"
                android:layout_marginEnd="@dimen/dp5"
                >
                <TextView
                    android:id="@+id/TitleAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp15"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />
                <TextView
                    android:id="@+id/addressTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="addressTxt"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp12"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />


            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_margin="@dimen/dp5"
                android:src="@drawable/edit_address"/>
            <ImageView
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_margin="@dimen/dp5"
                android:src="@drawable/set_address"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:gravity="center"
                android:padding="@dimen/dp5"
                android:id="@+id/layCorner"
                >
                <ImageView
                    android:id="@+id/imgCorener"
                    android:layout_width="@dimen/dp35"
                    android:layout_height="@dimen/dp35"
                    android:paddingStart="@dimen/dp10"
                    android:paddingEnd="@dimen/dp10"
                    android:src="@drawable/removeitem"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>